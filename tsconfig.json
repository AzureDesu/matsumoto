// tsconfig.json
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "strict": true,
      "moduleResolution": "bundler",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationDir": "dist",
      "sourceMap": true,
      "outDir": "dist"
    },
    "include": ["src"]
  }